<h4>List of all cities</h4>

<% if @cities.any? %>
  <ul>
    <% @cities.each do |city| %>
      <li><a href="/city/<%= city.id %>"><%= city.name %></a> <a class = 'editor' href="/city/<%= city.id %>/edit">edit</a></li>
    <% end %>
  </ul>
<% else %>
  <p>
    There are no cities, add one.
  </p>
<% end %>
